<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="#f0050325"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:id="@+id/navigationHeaderLayout"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.edutech.app.libraries.circleImageView.CircleImageView
        android:id="@+id/circleImageView"
        android:visibility="gone"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        app:civ_border_color="#34a5d9"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="12"
        app:civ_shadow_color="#34a5d9"/>

    <ImageView
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>



    <TextView
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:id="@+id/textname_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:id="@+id/textViewmail_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@email.com" />

</LinearLayout>
